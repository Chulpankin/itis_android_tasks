<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsFragment"
    android:clickable="true"
    android:focusable="true"
    android:background="@android:color/background_light">

    <EditText
        android:id="@+id/edit_text_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:inputType="number"
        android:layout_gravity="center"
        android:hint="@string/enter_number"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="64dp"/>

    <Button
        android:id="@+id/button_add_random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_random"
        android:layout_gravity="center"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="64dp"/>

    <Button
        android:id="@+id/button_remove_random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remove_random"
        android:layout_gravity="center"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="64dp"/>

    <Button
        android:id="@+id/button_add_one_random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="64dp"
        android:text="@string/add_one_random" />

    <Button
        android:id="@+id/button_remove_one_random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="64dp"
        android:text="@string/remove_one_random" />

</LinearLayout>